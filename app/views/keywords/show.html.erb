<%- model_class = Keyword -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @keyword.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @keyword.user_id.user_name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              keywords_path, :class => 'btn'  %>
  			<%= link_to "View Twittes", keyword_twittes_path(@keyword.id), :class => 'btn btn-info' %>
			  <% if (current_user != nil && current_user.has_role?(:admin)) || (current_user != nil && current_user.id == @keyword.user.id) %>		
	          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	                      keyword_path(@keyword),
	                      :method => :delete,
	                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
	                      :class => 'btn btn-danger' %>
			  <% end %>
</div>
