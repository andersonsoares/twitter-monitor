<%- model_class = Twitte -%>
<div class="page-header">
  <h1><%=@keyword.name%> <%=t '.title', :default => model_class.model_name.human.pluralize %></h1>

<div class="digg_pagination">
    <div clas="page_info">
      <%= page_entries_info @twittes %>
    </div>
    <%= will_paginate @twittes, :container => false %>
  </div>

</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:from_user) %></th>
      <th><%= model_class.human_attribute_name(:text) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      
    </tr>
  </thead>
  <tbody>
    <% @twittes.each do |twitte| %>
      <tr>
        <td><%= link_to twitte.id, keyword_twitte_path(@keyword.id, twitte) %></td>
        <td><%= twitte.from_user %></td>
        <td><%= twitte.text %></td>
        <td><%= twitte.date %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
